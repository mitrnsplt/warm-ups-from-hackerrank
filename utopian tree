#include <stdio.h>
#include <math.h>

int main()
    
 {
    
    int T, N;
    scanf("%d", &T);
    for (int i = 0; i < T; i++)
        {
        scanf("%d", &N);
        int h = 1;
        if (N == 0) {
            h = h;
        }
        for (int j = 1; j < (N + 1); j++) {
            if (j%2 == 1)
                h = 2 * h;
            else
                h = 1 + h; 
        }
        printf("%d\n", h);
    }
    
}
